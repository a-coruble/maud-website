---
import {getCollection} from "astro:content"

import Layout from '../layouts/Layout.astro';

const clothings = await getCollection("clothings")
---

<Layout>
	<!-- About / Intro Section -->
    <section id="about" class="py-16 bg-gray-900">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl font-bold mb-4 text-white">Hello, I'm Arthur Coruble</h1>
        <p class="text-lg max-w-2xl mx-auto text-gray-300">
          I'm currently creating a website using Astro, Tailwind CSS, and TypeScript. This site will be destined to a friend to help her setup her own website.
        </p>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-16 bg-gray-900">
        <h2 class="text-3xl font-semibold mb-8 text-center text-white">Projects</h2>
      <div class="container mx-auto px-4">
        <div class="grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
          <!-- Project Cards -->
          {clothings.map(({data: clothing}) => (
          <div class="bg-gray-800 rounded-2xl shadow-lg overflow-hidden">
              <img src={`${clothing.Medias[0].url}`} alt={clothing.Title} class="w-full h-48 object-cover" />
            <div class="p-6">
                <h3 class="text-xl font-bold mb-2 text-white">{clothing.Title}</h3>
              <p class="text-gray-300 mb-4">
                  {clothing.Description}
              </p>
                <a href={clothing.Slug} class="inline-block px-4 py-2 bg-blue-600 text-white rounded-full">
                View Details
              </a>
            </div>
          </div>
          ))}
            </div>
          </div>
    </section>




    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-16 bg-gray-900">
      <div class="container mx-auto px-4 max-w-xl">
        <h2 class="text-3xl font-semibold mb-8 text-center text-white">Get In Touch</h2>
        <form name="contact" method="POST" data-netlify="true" class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-300 mb-1">Name</label>
            <input type="text" id="name" name="name" required class="w-full border border-gray-700 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 bg-gray-800 text-white" />
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-300 mb-1">Email</label>
            <input type="email" id="email" name="email" required class="w-full border border-gray-700 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 bg-gray-800 text-white" />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-300 mb-1">Message</label>
            <textarea id="message" name="message" rows="6" required class="w-full border border-gray-700 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 bg-gray-800 text-white"></textarea>
          </div>

          <button type="submit" class="w-full py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-lg hover:bg-blue-700 transition">
            Send Message
          </button>
        </form>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 text-center text-gray-400">
      &copy; {new Date().getFullYear()} Arthur Coruble. All rights reserved.
    </footer>
</Layout>
